<!DOCTYPE html>
<html>
<head>
  <title>World Map</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>
<body>
  <h1>Interactive World Map</h1>
  <div id="map" style="height: 100vh"></div>

  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

</body>
</html>

<script>
  document.addEventListener("turbo:load", function() {
    if (document.getElementById('map')) {
      var map = L.map('map').setView([0, 0], 2); // Center the map on coordinates (0,0) and zoom level 2

      L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors & <a href="https://carto.com/attributions">CartoDB</a>'
      }).addTo(map);

      map.on('click', function(e) {
        window.location.href = `/weather?lat=${e.latlng.lat}&lng=${e.latlng.lng}`;
      });
    }
  });
</script>